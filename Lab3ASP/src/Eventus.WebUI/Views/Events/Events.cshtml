            </th>
            <th>
                @Html.DisplayNameFor(model => model.GovernmentNumberOfService)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceOfTheEvent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRework)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameOfEvent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GovernmentNumberOfService)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventDuration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceOfTheEvent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsRework)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
