@model IEnumerable<Eventus.WebUI.ViewModels.EventViewModel>

@{
    ViewData["Title"] = "Events";
}

<h1>Events</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="EventsOnRework">Events on rework</a>
</p>
<form asp-action="LongEvents">
    Duration
